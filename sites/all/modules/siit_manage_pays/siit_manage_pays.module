			$results = db_query("SELECT n.li_pays FROM siit_pays n
				INNER JOIN siit_pays_entite ne ON ne.id_pays = n.id_pays
				WHERE (n.li_pays = '".$li_pays."'
					OR ne.li_pays = '".$li_pays."')
					AND ne.id_pays_entite <> $id_pays_entite");
